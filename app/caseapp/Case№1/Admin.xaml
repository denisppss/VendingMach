<Window x:Class="Case_1.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Case_1"
        mc:Ignorable="d"
        Title="Административная панель" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="325*"/>
        </Grid.RowDefinitions>
        <Border Width="auto" Height="auto" BorderBrush="Black" BorderThickness="2"/>
        <Label Content="Монеты" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <Label Name="DrinkB" Content="Напитки" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" PreviewMouseDown="DrinkBt"/>
        <Label Content="Отчёт" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top"/>
    </Grid >
</Window>
